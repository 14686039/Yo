#header
  height: banner-height
  position: relative
  border-bottom: 1px solid color-border
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 50px
  &:before
    top: 0
    background: #fff
  &:after
    bottom: 0
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.1))

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden
  height: 50px

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #0e90d2
  background-size: cover
  z-index: -1

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #fff
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: 140px
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: #000
  opacity: 0.6
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 0 15px;
  line-height: 50px;
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  position: relative
  cursor: pointer

.nav-icon + .main-nav-link
  margin-top: -2px
  font-size: 20px
  &:hover
    background-color: transparent
    opacity: 1

.main-nav-link
  @extend $nav-link
  font-weight: 700
  letter-spacing: 1px
  &:hover
    background-color: #f9f9f9
    opacity: 1
  @media mq-mobile
    display: none

.getting-started .main-nav-link[href="/getting-started"],
.documentation .main-nav-link[href="/documentation"],
.demo .main-nav-link[href="/demo"]
  background-color: #f9f9f9
  opacity: 1

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px
  padding-right: 5px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 13px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 4px
  @media mq-mobile
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777